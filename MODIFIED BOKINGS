        while(fin1.read((char*)&ob,sizeof(ob)))
        {
            if(ob.getid()!=id2)
            {

                fout2.write((char*)&ob,sizeof(ob));

            }

           cout<<"\nFlight Id"<<id2<<"Deleted Successfully";
        }
        fin.close();
        fin1.close();
        fout2.close();
        remove("flightinfo1.dat");
        rename("traintemp1.dat","flightinfo1.dat");
        cout<<"\nPress Any Key ";
        getch();
        break;
        }
         if(chk==0)
        {
         cout<<"\n->Flight Not Found\n";
        }
        getch();
        break;


    }
case 5:
