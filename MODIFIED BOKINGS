#include<iostream>
#include<fstream>
#include<stdio.h>
#include<stdlib.h>
#include<conio.h>

using namespace std;
class bus
{
int id,k;

double fare,tkt=100;
char pt[100],reach[100],time[20];
int n;
int price;
char name[50];
public:
void book()
{
    cout<<"\nEnter Bus Id            : ";
    cin>>id;
    cin.ignore(2,'\n');
    cout<<"\nEnter Starting Location : ";
    cin.getline(pt,100);
    cout<<"\nEnter Reach Point       : ";
    cin.getline(reach,100);
    cout<<"\nEnter CatchupTime       : ";
    cin.getline(time,20);
    cout<<"\nEnter The Fare(Price)   : ";
    cin>>fare;
}
void display()
{
    cout<<"\nBus Id             :"<<id;
    cout<<"\nStarting Location  :"<<pt;
    cout<<"\nReach Point        :"<<reach;
    cout<<"\nCatchupTime        :"<<time;
    cout<<"\nBus Fare           :"<<fare;
    cout<<endl;
}
int getfair()
{
    return fare;
}
void booktkt()
{

   // cout<<"\nEnter The Bus Id You Want To Travel : ";
    //cin>>k;
    cout<<"\nMaximum Seats      :"<<tkt;

    cout<<"\n\nEnter Your Details  :-:";
    cin.ignore(4,'\n');
    cout<<"\n\nEnter your Name : ";
    cin.getline(name,50);
    cout<<"\nEnter The Seat No You Want To Book  :";
    cin>>n;
    cout<<"\nPAY Amount "<<"Rs. "<<fare<<" :";



}

void displaytkt()
{
   cout<<"\nYour Name      : "<<name;
   cout<<"\nBooked Seat No : "<<n;
   cout<<"\nPrice Paid     : "<<fare;
   cout<<endl;
}
int getid()
{
    return id;
}
int getseat()
{
    return n;
}
};
class train
{
